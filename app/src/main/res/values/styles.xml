<resources>

    <style name="DarkAppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkThemeColorPrimaryDark</item>
        <item name="colorAccent">#BF4062</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColorPrimary">@color/darkThemeTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/darkThemeTextColorSecondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="LightAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightThemeColorPrimaryDark</item>
        <item name="colorAccent">#BF4062</item>
        <item name="android:tint">@color/black</item>
        <item name="android:textColorPrimary">@color/lightThemeTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/lightThemeTextColorSecondary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="DarkAppThemeGreen" parent="DarkAppTheme">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#F57C00</item>
    </style>

    <style name="LightAppThemeGreen" parent="LightAppTheme">
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryDark">#689F38</item>
        <item name="colorAccent">#F57C00</item>
    </style>

    <style name="DarkAppThemeRed" parent="DarkAppTheme">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#9E9E9E</item>
    </style>

    <style name="LightAppThemeRed" parent="LightAppTheme">
        <item name="colorPrimary">#FF5252</item>
        <item name="colorPrimaryDark">#F44336</item>
        <item name="colorAccent">#9E9E9E</item>
    </style>

</resources>
